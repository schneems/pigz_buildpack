#!/usr/bin/env bash

# bin/compile <build-dir> <cache-dir>

echo "-----> Installing pigz like a boss"
mkdir -p $1/vendor/pig_bin

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# copy binary
cp $DIR/../vendor/bin/pigz $1/vendor/pig_bin/pigz

# set the path on startup
mkdir -p .profile.d
echo 'export PATH=$PATH:$HOME/vendor/pig_bin' > .profile.d/pigz.sh
